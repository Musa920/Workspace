<%- include('../layout/header') %>

<div class="container" style="margin-bottom: 100px;">
    <h1>
        <%= article.title %>
        <% if (islogin && user.id === article.authorId) { %>
        <a href="/article/edit?id=<%= article.id %>" class="btn btn-info btn-sm pull-right">编辑</a>
        <% } %>
    </h1>
    <hr>
    <div style="width: 400px; height: 300px; margin: 20px auto;">
        <img style="width: 100%; height: 100%;" src="<%= article.cover %>">
    </div>
    <hr>
    <%- article.content %>
</div>

<%- include('../layout/footer') %>